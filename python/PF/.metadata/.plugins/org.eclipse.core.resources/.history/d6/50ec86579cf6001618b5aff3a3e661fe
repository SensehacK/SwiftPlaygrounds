def fun2(x,y):
    try:
        z=x+y
        print(z)
    except TypeError:
        print(0)
    print(9)
try:
    fun(2,'2')
    print(1)
except Exception:
    print(2)
except TypeError:
    print(3)
except NameError:
    print(4)
except ValueError:
    print(5)
finally:
    print(6)
print(7)



def fun(x):
    if(x=="qwe"):
        return x
    else:
        x=x[:-1]
        return fun(x)


str1="qwerty"
str2=fun(str1)
print(str1,str2)


==========================
def fun(x):
    if(x=="qwe"+x):
        return x
    else:
        x=x[:-1]
        return fun(x)


str1="qwerty"
str2=fun(str1)
print(str1,str2)
